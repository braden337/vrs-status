<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th class="col-xs-4 text-center">Location</th>
      <th class="col-xs-8 text-center">Status</th>
    </tr>
  </thead>

  <% for base in @bases %>
    <tr>
      <td class="text-center"><%= base[:name] %></td>
      <td class="text-center <%= base[:status] %>">
        <%= base[:status] == "success" ? "&#x2713;" : "&#x2717;" %>
      </td>
    </tr>
  <% end %>
</table>