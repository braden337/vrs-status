<% for base in @bases %>
  <div class="row" style="height: 12.5vh; padding: 0;">
    <div class="col-xs-12 text-center bg-<%= base[:status] %>" style="height: 100%;">
      <h2 style="font-family: sans-serif;line-height: 100%;text-shadow: 1px 1px 1px #000;
                font-weight: bold; color: <%= base[:status] == "success" ? "white" : "black" %>">
        <%= base[:name] %>
        </h2>
    </div>
  </div>
<% end %>